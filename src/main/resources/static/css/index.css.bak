@charset "utf-8";

body ul li{
    margin: 0 auto;
    padding: 0 auto;
}

.box{
    position: relative;
    width: 720px;
    height: 480px;
    margin: 50px auto;
    border: 1px solid #cccccc;
}

.box h1{
    color: #008040;
    text-align: center;
    margin-top: 50px;
}

.searchbox{
    width: 80%;
    height: 30px;
    margin: 60px auto;
    border: 1px solid #008040;
}

.searchbox input[type="text"]{
    height: 28px;
    width: 85%;
    margin: 0;
    outline: none;
    border: 0;
    line-height: 24px;
    font-size: 18px;
}

/*input:-webkit-autofill {*/
/*    background-color: #FFFFFF;*/
/*    background-image: none;*/
/*    color: #000;*/
/*}*/

.searchbox input[type="submit"]{
    height: 30px;
    width: 14%;
    outline: none;
    border: 0px;
    margin: 0;
    padding: 0;
    background-color: #008040;
    vertical-align: middle;
    color: #ffffff;
    float: right;
}

.searchbox .search_suggest{
    height: 28px;
    width: 85%;
    margin: 0;
    outline: none;
    border: 0;
    line-height: 24px;
    font-size: 18px;
}

.searchbox .search_suggest li{
    height:24px;
    overflow:hidden;
    padding-left:3px;
    line-height:24px;
    background:#FFFFFF;
    cursor:default;
}

.searchbox .search_suggest li.hover{
    background:#DDDDDD;
}

